@{
    ViewData["Title"] = "Group Chat";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Group Chat</h1>

    <div class="row">
        <div class="col-md-3">
            <div class="card mb-3">
                <div class="card-header">
                    <h5>Username</h5>
                </div>
                <div class="card-body">
                    <input type="text" id="usernameInput" class="form-control mb-2" placeholder="Your username" />
                    <button class="btn btn-primary btn-sm w-100" id="setUsernameButton">Set Username</button>
                    <div id="currentUsername" style="display:none;" class="alert alert-success mt-2 mb-0">
                        <strong id="displayUsername"></strong>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5>Groups</h5>
                </div>
                <div class="card-body">
                    <input type="text" id="groupNameInput" class="form-control mb-2" placeholder="Group name" />
                    <button class="btn btn-success btn-sm w-100 mb-2" id="joinGroupButton">Join Group</button>
                    <button class="btn btn-danger btn-sm w-100" id="leaveGroupButton">Leave Current Group</button>
                    <div id="currentGroup" class="mt-3" style="display:none;">
                        <div class="alert alert-info mb-0">
                            Current: <strong id="displayGroup"></strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h5>Group Messages</h5>
                </div>
                <div class="card-body">
                    <div id="groupMessages" class="border p-3 mb-3" style="height: 400px; overflow-y: auto;"></div>
                    <div class="input-group">
                        <input type="text" id="groupMessageInput" class="form-control" placeholder="Type a message..." />
                        <button class="btn btn-primary" id="sendGroupButton">Send to Group</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chatHub")
            .build();

        let currentGroup = null;

        connection.on("ReceiveGroupMessage", function (groupName, user, message) {
            const msg = document.createElement("div");
            msg.className = "mb-2 p-2";

            if (user === "System") {
                msg.className += " alert alert-warning py-1";
                msg.innerHTML = `<small><em>${escapeHtml(message)}</em></small>`;
            } else {
                msg.className += " bg-light rounded";
                msg.innerHTML = `<strong>${escapeHtml(user)}:</strong> ${escapeHtml(message)}`;
            }

            document.getElementById("groupMessages").appendChild(msg);
            document.getElementById("groupMessages").scrollTop = document.getElementById("groupMessages").scrollHeight;
        });

        connection.on("UsernameSet", function (username) {
            document.getElementById("currentUsername").style.display = "block";
            document.getElementById("displayUsername").textContent = username;
        });

        connection.start().catch(err => console.error(err.toString()));

        document.getElementById("setUsernameButton").addEventListener("click", function() {
            const username = document.getElementById("usernameInput").value.trim();
            if (username) {
                connection.invoke("SetUsername", username).catch(err => console.error(err.toString()));
            }
        });

        document.getElementById("joinGroupButton").addEventListener("click", function() {
            const groupName = document.getElementById("groupNameInput").value.trim();
            if (groupName) {
                connection.invoke("JoinGroup", groupName)
                    .then(() => {
                        currentGroup = groupName;
                        document.getElementById("currentGroup").style.display = "block";
                        document.getElementById("displayGroup").textContent = groupName;
                    })
                    .catch(err => console.error(err.toString()));
            }
        });

        document.getElementById("leaveGroupButton").addEventListener("click", function() {
            if (currentGroup) {
                connection.invoke("LeaveGroup", currentGroup)
                    .then(() => {
                        currentGroup = null;
                        document.getElementById("currentGroup").style.display = "none";
                        document.getElementById("groupMessages").innerHTML = '';
                    })
                    .catch(err => console.error(err.toString()));
            }
        });

        document.getElementById("sendGroupButton").addEventListener("click", sendGroupMessage);
        document.getElementById("groupMessageInput").addEventListener("keypress", function(e) {
            if (e.key === 'Enter') sendGroupMessage();
        });

        function sendGroupMessage() {
            const message = document.getElementById("groupMessageInput").value.trim();

            if (currentGroup && message) {
                connection.invoke("SendMessageToGroup", currentGroup, message).catch(err => console.error(err.toString()));
                document.getElementById("groupMessageInput").value = '';
            } else if (!currentGroup) {
                alert("Please join a group first!");
            }
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    </script>
}
