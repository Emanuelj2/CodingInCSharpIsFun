@model IEnumerable<MVCApplication.Models.Invoice>

@{
}
<h1 class="text-center mb-3">Invoices</h1>

<!--Button to create an invoice-->
<a asp-action="Create" class="btn btn-primary mb-3">Create New Invoice</a>


<!--Display the invoices in table format-->
<div class="card table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Invoice ID</th>
                <th>Invoice Number</th>
                <th>Status</th>
                <th>Customer Name</th>
                <th>Price Per Unit</th>
                <th>Quantity</th>
                <th>Issue Date</th>
                <th>Due Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var invoice in Model)
            {
                <tr>
                    <td>@invoice.Id</td>
                    <td>@invoice.Number</td>
                    <td>@invoice.Status</td>
                    <td>@invoice.ClientName</td>
                    <td>@invoice.UnitPrice.ToString("C")</td>
                    <td>@invoice.Quantity</td>
                    <td>@invoice.IssueDate.ToString("MM/dd/yyyy")</td>
                    <td>@invoice.DueDate.ToString("MM/dd/yyyy")</td>
                    <td>
                        <a asp-action="Delete" class="btn btn-danger mb-3 ">Delete</a>
                        <a asp-action="Edit" asp-route-id="@invoice.Id" class="btn btn-warning mb-3">Edit</a>

                    </td>
                </tr> 
            }
        </tbody>
    </table>
</div>